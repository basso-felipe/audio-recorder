{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Projects */
    "incremental": true,

    /* Language and Environment */
    "target": "es2022",
    "lib": [
      "ES6",
      "DOM"
    ],

    /* Modules */
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "audio-recorder": ["./src/index"]
    },

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": true,
    "stripInternal": true,
    "preserveConstEnums": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitReturns": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
